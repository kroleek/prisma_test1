{
    "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "lib": ["es2017", "esnext", "dom"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "config/**/*"],
    "exclude": ["node_modules", "**/__generated/*"]
  }
  